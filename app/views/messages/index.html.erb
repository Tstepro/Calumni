<% if @over_ten %>
   <%= link_to 'Show Previous', '?m=all' %>
<% end %>

<div class="ui segment">
  <% @messages.each do |message| %>
    <% if message.body %>
      <% people = People.find(message.people_id) %>
      <div class="item">
        <div class="content">
          <div class="header"><strong><%= people.username %></strong> <%= message.message_time %></div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <%= message.body %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
    <%= f.text_field :people_id, value: current_user.id, type: "hidden"  %>
  </div>
    <%="Available to help with: " + People.find(@conversation.recipient_id).helpability %><br />
    <%="Please only choose at most one help"%><br />
    <%=check_box 'resume', 'requested', disabled: !People.find(@conversation.recipient_id).helpability.include?("resume"), type:"radio"%> Resume<br />
    <%=check_box 'interview', 'requested', disabled: !People.find(@conversation.recipient_id).helpability.include?("interview"), type:"radio"%> Mock Interview<br />
    <%=check_box 'Submit referral', 'requested', disabled: !People.find(@conversation.recipient_id).helpability.include?("Submit referral"), type:"radio"%> Submit referral<br />
    <%=check_box 'Company tour', 'requested', disabled: !People.find(@conversation.recipient_id).helpability.include?("Company tour"), type:"radio"%> Company tour<br />
  <div>
    <%= f.submit "Add Reply", class: "ui blue labeled submit icon button" %>
  </div>

<% end %>
