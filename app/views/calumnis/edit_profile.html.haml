.container
  .row
    = bootstrap_form_for(@people,url: update_profile_path) do |f|
      = f.file_field :avatar
      = f.text_area :description
      = f.select(:major, options_for_select([['EECS'],['CS'],['BIO'],['Biology']]))
      
      = f.datetime_field :start_date
      = f.datetime_field :graduation_date

      - if @people.first.role == 'mentor'
        = f.text_field :company, label: "Company"
        = f.text_field :position
        %hr
        %h5
          %strong Willing to Help with
        - People.all_helps.each do |help|
          = f.label help
          = check_box_tag "helps[]", help,false,:id => "helps_#{help}"
        %hr
      
      = f.text_area :open_advice ,label:"General advice"
      = f.file_field :resume

      = f.submit "Update"
