<div class="ui segment">
  <h3>Mailbox</h3>

  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user || conversation.recipient_id == current_user %>
          <% if conversation.sender_id == current_user %>
            <% recipient = People.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = People.find(conversation.sender_id) %>
          <% end %>
          <%= link_to recipient.username, conversation_messages_path(conversation)%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


<div class="ui segment">
  <h3>All Peoples</h3>
  <div class="ui list">
    <% @peoples.each do |user| %>
      <% if user != current_user %>
      <div class="item">
        <%= user.username %> <%= link_to 'Message me!', conversations_path(sender_id: current_user, recipient_id: user), method: 'post'%>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
